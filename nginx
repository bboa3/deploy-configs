# React
server {
        listen 80;
        listen [::]:80;

        root /var/www/html;
        index index.html index.htm index.nginx-debian.html;

        server_name mozeconomia.co.mz www.mozeconomia.co.mz;

        location / {
                try_files $uri /index.html =404;
        }
}


# Node
server {
        listen       80;
        listen       [::]:80;
        server_name mozeconomia.co.mz www.mozeconomia.co.mz;

        location / {
                proxy_pass http://localhost:8080;
        }
}
